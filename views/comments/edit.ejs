<%- include('../partials/header.ejs') %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-6">
            <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT", method="POST">
                <h1 class="text-center">Edit comment for <%= campground.name %> </h1>
                <div class="form-group">
                    <label for="text">Your comment:</label>
                    <textarea name="comment[text]" id="text" cols="30" rows="10" class="form-control" >
                        <%= comment.text %> 
                    </textarea>
                </div>
                <input type="submit" value="edit comment" class="btn btn-success mx-auto d-flex justify-content-center btn-block">
            </form>
            
        </div>
    </div>
</div>


