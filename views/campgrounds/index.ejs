<%- include('../partials/header.ejs') %> 
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp's Campgrounds</h1>
            <p>View some of the best campgrounds from across the globe</p>
            <p>
                <a class="btn btn-lg btn-primary " href="/campgrounds/new"> Add a new campground</a>
            </p>
        </div>
    </header>
    
    <div class="row text-center">
        <%   campgrounds.forEach((campground) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="card">
                    <img class="card-img-top" src="<%= campground.image %> " alt="">
                    <div class="card-body">
                        <h5 class="card-title"><%= campground.name %> </h3>
                        <a href="/campgrounds/<%= campground._id %> " class="btn btn-primary"> Find out more</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    
</div>
<%- include('../partials/footer.ejs') %> 