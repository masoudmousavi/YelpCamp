<%- include('../partials/header.ejs') %> 
<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-4">
            <h1 class="text-center pb-3">Edit <%= campground.name %></h1>
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method='POST'>
                <div class='form-group'>
                    <input class="form-control" type="text" value="<%= campground.name %> " name="campground[name]">
                </div>
                <div class='form-group'>
                    <input class="form-control" type="number" value=<%= campground.price %>  name="campground[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= campground.image %> " name="campground[image]">
                </div>
                <div class='form-group'>
                    <textarea name="campground[description]" class="form-control" cols="30" rows="10"><%= campground.description %> </textarea>
                </div>
                <div class='form-group'>
                    <input class="btn btn-lg btn-outline-success btn-block " type="submit" value="Edit campground!">
                </div>
                <a href="/campgrounds" class="m-auto">Go back</a>
            </form>
        </div>
    </div>
    

</div>

<%- include('../partials/footer.ejs') %> 